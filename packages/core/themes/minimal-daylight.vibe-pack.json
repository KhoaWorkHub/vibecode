{
  "id": "minimal-daylight",
  "name": "Minimal Daylight",
  "description": "Clean, minimal light theme for focused morning work. Easy on the eyes with just the essentials.",
  "tags": ["light", "minimal", "morning", "focus", "clean"],
  "preview": "previews/minimal-daylight.png",
  "author": "VibeCode Team",
  "version": "1.0.0",
  "extensions": [
    "github.github-vscode-theme",
    "pkief.material-icon-theme"
  ],
  "settings": {
    "workbench.colorTheme": "GitHub Light Default",
    "workbench.iconTheme": "material-icon-theme",
    "editor.fontFamily": "'Inter', 'SF Pro', -apple-system, sans-serif",
    "editor.fontSize": 13,
    "editor.lineHeight": 20,
    "editor.fontWeight": "400",
    "editor.cursorStyle": "line",
    "editor.cursorBlinking": "smooth",
    "editor.renderWhitespace": "none",
    "editor.minimap.enabled": false,
    "terminal.integrated.fontFamily": "'SF Mono', monospace",
    "terminal.integrated.fontSize": 12,
    "workbench.activityBar.visible": false,
    "workbench.statusBar.visible": true,
    "editor.lineNumbers": "on",
    "breadcrumbs.enabled": false,
    "workbench.tree.indent": 20
  },
  "layout": {
    "sidebarLocation": "left",
    "terminalVisible": false,
    "editorColumns": 1,
    "zenMode": false
  }
}
