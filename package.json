{
  "name": "vibecode",
  "version": "1.1.0",
  "description": "The Ultimate VSCode Customization Tool - Apply themes, layouts, and moods to your editor with one click",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "build:essentials": "pnpm --filter @vibecode/core build && pnpm --filter @vibecode/cli build",
    "dev": "pnpm -r --parallel dev",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "cli:dev": "pnpm --filter @vibecode/cli dev",
    "extension:dev": "pnpm --filter @vibecode/extension dev",
    "ui:dev": "pnpm --filter @vibecode/ui dev"
  },
  "keywords": [
    "vscode",
    "theme",
    "layout",
    "customization",
    "ui",
    "developer-tools"
  ],
  "author": "VibeCode Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
